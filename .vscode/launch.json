{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "FastAPI (Uvicorn)",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app.main:app",
          "--reload",
          "--port", "8080",
          "--app-dir", "src"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "jinja": true,
        "justMyCode": true
      }
    ]
  }
  